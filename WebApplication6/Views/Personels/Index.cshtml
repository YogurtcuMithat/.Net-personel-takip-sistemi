@model IEnumerable<WebApplication6.Models.Personel>


@{
    ViewBag.Title = "Index";
}
<h2>Personel Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Personel ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            Ad - Soyad
        </th>
        <th>
            Meslek Adı
        </th>
        <th>
            Bulunduğu konum
        </th>
        <th>
            Telefon Numarası
        </th>
        <th>
            @using (Html.BeginForm("Index","Personels", FormMethod.Post))
            {
                <select id="SelectOption" name="SelectOption">
                    <option value="default">Vardiya </option>
                    <option value="v1">1. Vardiya </option>
                    <option value="v2">2. Vardiya</option>
                    <option value="v3">3. Vardiya</option>
                    <option value="v4">Müdür Vardiyası</option>
                </select>
                <input type="submit" value="Filtrele" />
            }

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                @Html.DisplayFor(modelItem => item.LastName)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobName.JobName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeName.TimeRotationName)
           
            </td>

            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
        }

</table>
